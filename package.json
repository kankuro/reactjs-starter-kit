{
  "name": "my-react-boilerplate",
  "version": "1.0.0",
  "description": "A minimalist react starter kit",
  "private": true,
  "main": "src/index.js",
  "scripts": {
    "start": "cross-env NODE_PATH=./src webpack-dev-server -d --mode development",
    "dev": "npm run clean && cross-env NODE_PATH=./src NODE_ENV=development webpack --display-error-details --hide-modules --colors --progress",
    "build": "npm run clean && cross-env NODE_PATH=./src NODE_ENV=production webpack --display-error-details --hide-modules --colors --progress",
    "lint": "eslint --debug src/",
    "lint:write": "eslint --debug src/ --fix",
    "prettier": "prettier --write src/**/*.js",
    "clean": "rimraf ./build/*.js && rimraf ./build/*.map && rimraf ./build/*.html && rimraf ./build/*.ico && rimraf ./build/images/**  && rimraf ./build/*.css",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "npm run prettier",
      "npm run lint:write",
      "git add"
    ]
  },
  "keywords": [
    "react",
    "boilerplate"
  ],
  "author": "Lyndon Baylin Jr.",
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-loadable": "^5.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.3.1",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.1",
    "cssnano": "^4.1.7",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-jest-enzyme": "^7.0.1",
    "eslint-config-prettier": "^3.3.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.0.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.0",
    "file-loader": "^2.0.0",
    "glob": "^7.1.3",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.1.4",
    "image-webpack-loader": "^4.5.0",
    "lint-staged": "^8.0.5",
    "mini-css-extract-plugin": "^0.4.4",
    "node-sass-chokidar": "^1.3.4",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.15.2",
    "purify-css": "^1.2.5",
    "purifycss-webpack": "^0.7.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-merge": "^4.1.4"
  }
}
